<div class="row">
    <div class="col-sm-3">
      <div class="map-features">
        <h4 class="section-title">Map Features</h4>
        <hr>

        <div class="checkbox">
          <label>
            {{input type='checkbox' checked=mapFeatureToggles.proposedEv}}
            <img class="icon" src="/assets/images/icon_fastcharge.png" alt="Proposed EV Station Locations">
            Proposed EV Station Locations
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.currentEv}}
            <img class="icon" src="/assets/images/ex_fastcharge-icon.png" alt="Existing charging stations">
            Existing Charging Stations
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.gas}}
            <img class="icon" src="/assets/images/icon_gas.png" alt="Gas Station Locations">
            Gas Station Locations
          </label>
        </div>

        <div class="checkbox disabled">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.buses disabled=true}}
            <img class="icon" src="/assets/images/icon_bus.png" alt="Bus stops">
            Bus stops
          </label>
        </div>

        <div class="checkbox disabled">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.parks disabled=true}}
            <img class="icon" src="/assets/images/icon_park.png" alt="Parks">
            Parks
          </label>
        </div>

        <div class="checkbox disabled">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.schools disabled=true}}
            <img class="icon" src="/assets/images/icon_school.png" alt="Schools">
            Schools
          </label>
        </div>

      </div>

      <div class="zoning">
        <h4 class="section-title">Zoning</h4>
        <hr>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.agriculture}}
            <div class="color-box agriculture"></div>
            Agriculture
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.commercial}}
            <div class="color-box commercial"></div>
            Commercial
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.downtown}}
            <div class="color-box downtown"></div>
            Downtown
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.industrial}}
            <div class="color-box industrial"></div>
            Industrial
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.parking}}
            <div class="color-box parking"></div>
            Parking
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.publicLand}}
            <div class="color-box public-land"></div>
            Public Land
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.residentialSingle}}
            <div class="color-box residential"></div>
            Residential (Single)
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.residentialMulti}}
            <div class="color-box residential-multi"></div>
            Residential (Multi)
          </label>
        </div>
      </div>
    </div>

    <div class="col-sm-9">
        <div id="map">
          {{leaflet-map height='500px' onMapReady=(action 'mapReady')}}
        </div>
    </div>
</div>
