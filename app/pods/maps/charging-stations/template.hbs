<div class="row">
    <div class="col-sm-3">
      <div class="map-features">
        <h4 class="section-title">Map Features</h4>
        <hr>
        <div class="sidebar-row">
          <input type="checkbox" /><img class="icon" src="/assets/images/icon_fastcharge.png" alt="Proposed EV Station Locations">
          <label>Proposed EV Station<br> Locations</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><img class="icon" src="/assets/images/ex_fastcharge-icon.png" alt="Existing charging stations">
          <label>Existing charging<br> stations</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><img class="icon" src="/assets/images/icon_gas.png" alt="Gas Station Locations">
          <label>Gas Station Locations</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><img class="icon" src="/assets/images/icon_bus.png" alt="Bus stops">
          <label>Bus stops</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><img class="icon" src="/assets/images/icon_park.png" alt="Parks">
          <label>Parks</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><img class="icon" src="/assets/images/icon_school.png" alt="Schools">
          <label>Schools</label><br>
        </div>

      </div>

      <div class="zoning">
        <h4 class="section-title">Zoning</h4>
        <hr>
        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box agriculture"></div>
          <label>Agriculture</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box commercial"></div>
          <label>Commercial</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box downtown"></div>
          <label>Downtown</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box industrial"></div>
          <label>Industrial</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box parking"></div>
          <label>Parking</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box public-land"></div>
          <label>Public Land</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box residential"></div>
          <label>Residential (Single)</label><br>
        </div>

        <div class="sidebar-row">
          <input type="checkbox" /><div class="color-box residential-multi"></div>
          <label>Residential (Multi)</label><br>
        </div>
      </div>
    </div>

    <div class="col-sm-9">
        <div id="map">
          {{leaflet-map height='500px' onMapReady=(action 'mapReady')}}
        </div>
    </div>
</div>
