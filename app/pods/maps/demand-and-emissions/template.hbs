<div class="row">
    <div class="col-sm-3">
        {{maps-sidebar mapService=mapService}}
    </div>

    <div class="col-sm-9 no-pad">
      <div class="col-sm-7 no-pad">
        <h4 class="section-title">Demand & Emissions</h4>
        <hr>

        <div class="col-sm-7 no-pad">
          <div class="col-sm-6 no-pad">
            <p>View information on predicted charging demand or actual emissions data.</p>
          </div>

          <div class="col-sm-6 no-pad">
            <div class="onoffswitch">
              <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
              <label class="onoffswitch-label" for="myonoffswitch">
                  <span class="onoffswitch-inner"></span>
                  <span class="onoffswitch-switch"></span>
              </label>
            </div>
          </div>
      </div>

      <div class="col-sm-5 no-pad">
        <p>Select percentage of EV in fleet</p>
      </div>
    </div>

      <div class="col-sm-5">
        <h4 class="section-title">Set time range</h4>
        <hr>

        <div class="col-sm-5 no-pad">
          <br>
          <div class="onoffswitch-third">
            <input type="checkbox" name="onoffswitch-third" class="onoffswitch-checkbox-third" id="myonoffswitch-third" checked>
            <label class="onoffswitch-label-third" for="myonoffswitch-third">
                <span class="onoffswitch-inner-third"></span>
                <span class="onoffswitch-switch-third"></span>
            </label>
          </div>
        </div>

        <div class="col-sm-7 no-pad">
          <div class="dropdown">
            <!-- Bootstrap not working -->
            <p>Select  day:</p>
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Dropdown
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <button class="dropdown-item" type="button">Action</button>
              <button class="dropdown-item" type="button">Another action</button>
              <button class="dropdown-item" type="button">Something else here</button>
            </div>
          </div>
        </div>

      </div>
    </div>


    <div class="col-sm-9 no-pad">
      <div class="col-sm-7 no-pad">
        <h4 class="section-title pad-top">Select Vehicle Type</h4>
        <hr>

        <div class="col-sm-7 no-pad">
          <div class="col-sm-6 no-pad">
            <p>Select between EV and IC vehicles.</p>
          </div>

          <div class="col-sm-6 no-pad">
            <div class="onoffswitch-second">
              <input type="checkbox" name="onoffswitch-second" class="onoffswitch-checkbox-second" id="myonoffswitch-second" checked>
              <label class="onoffswitch-label-second" for="myonoffswitch-second">
                  <span class="onoffswitch-inner-second"></span>
                  <span class="onoffswitch-switch-second"></span>
              </label>
            </div>
          </div>
      </div>

      <div class="col-sm-5 no-pad">
        <p>Charge remaining or less</p>
      </div>
    </div>


    </div>

    <div class="col-sm-9">
      {{leaflet-map height='500px' onMapReady=(action 'mapReady')}}
    </div>
</div>
