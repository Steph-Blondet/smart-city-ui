<div class="row">
    <div class="col-xs-3">
    {{maps-sidebar mapService=mapService gridDirector=gridDirector}}
    </div>

    <div class="col-xs-9">
        <div class="row mb-2">
            <div class="col-xs-12">
                {{maps-topbar mapService=mapService gridDirector=gridDirector}}
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 mb-1">
                <div class="pull-right">
                    {{if gridDirector.emissionsActive 'Low Emissions' 'High Demand'}}
                    {{gradient-legend colors=gridDirector.currentColorPalette}}
                    {{if gridDirector.emissionsActive 'High Emissions' 'Low Demand'}}
                </div>
            </div>

            <div class="col-xs-12">
                {{leaflet-map height='500px' onMapReady=(action 'mapReady')}}
            </div>
        </div>
    </div>
</div>
