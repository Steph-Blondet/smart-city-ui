<div class="row">
    <div class="col-xs-3">
    {{maps-sidebar mapService=mapService gridDirector=gridDirector}}
    </div>

    <div class="col-xs-9">
        <div class="row mb-2">
            <div class="col-xs-12">
                {{maps-topbar mapService=mapService gridDirector=gridDirector}}
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 mb-1">
                <div class="pull-right">
                    Low {{if gridDirector.demandActive 'Demand' 'Emissions'}}
                    {{gradient-legend colors=gridDirector.currentColorPalette reverse=gridDirector.demandActive}}
                    High {{if gridDirector.demandActive 'Demand' 'Emissions'}}
                </div>
            </div>

            <div class="col-xs-12">
                {{leaflet-map height='500px' onMapReady=(action 'mapReady')}}
            </div>
        </div>
    </div>
</div>
