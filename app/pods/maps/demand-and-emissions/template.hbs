<div class="row">
    <div class="col-sm-3">
      <!-- REPETITIVE CODE STARTS from app/pods/maps/charging-stations/template.hbs -->
      <div class="map-features">
        <h4 class="section-title">Map Features</h4>
        <hr>

        <div class="checkbox">
          <label>
            {{input type='checkbox' checked=mapFeatureToggles.proposedEv}}
            <img class="icon" src="/assets/images/icon_fastcharge.png" alt="Proposed EV Station Locations">
            Proposed EV Station <br>Locations
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.currentEv}}
            <img class="icon" src="/assets/images/ex_fastcharge-icon.png" alt="Existing charging stations">
            Existing Charging Stations
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.gas}}
            <img class="icon" src="/assets/images/icon_gas.png" alt="Gas Station Locations">
            Gas Station Locations
          </label>
        </div>

        <div class="checkbox disabled">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.buses disabled=true}}
            <img class="icon" src="/assets/images/icon_bus.png" alt="Bus stops">
            Bus stops
          </label>
        </div>

        <div class="checkbox disabled">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.parks disabled=true}}
            <img class="icon" src="/assets/images/icon_park.png" alt="Parks">
            Parks
          </label>
        </div>

        <div class="checkbox disabled">
          <label>
            {{input type="checkbox" checked=mapFeatureToggles.schools disabled=true}}
            <img class="icon" src="/assets/images/icon_school.png" alt="Schools">
            Schools
          </label>
        </div>

      </div>

      <div class="zoning">
        <h4 class="section-title">Zoning</h4>
        <hr>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.agriculture}}
            <div class="color-box agriculture"></div>
            Agriculture
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.commercial}}
            <div class="color-box commercial"></div>
            Commercial
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.downtown}}
            <div class="color-box downtown"></div>
            Downtown
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.industrial}}
            <div class="color-box industrial"></div>
            Industrial
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.parking}}
            <div class="color-box parking"></div>
            Parking
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.publicLand}}
            <div class="color-box public-land"></div>
            Public Land
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.residentialSingle}}
            <div class="color-box residential"></div>
            Residential (Single)
          </label>
        </div>

        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=zoningToggles.residentialMulti}}
            <div class="color-box residential-multi"></div>
            Residential (Multi)
          </label>
        </div>
      </div>
    </div>
    <!-- REPETITIVE CODE ENDS -->

    <div class="col-sm-9 no-pad">
      <div class="col-sm-7 no-pad">
        <h4 class="section-title">Demand & Emissions</h4>
        <hr>

        <div class="col-sm-7 no-pad">
          <div class="col-sm-6 no-pad">
            <p>View information on predicted charging demand or actual emissions data.</p>
          </div>

          <div class="col-sm-6 no-pad">
            <div class="onoffswitch">
              <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
              <label class="onoffswitch-label" for="myonoffswitch">
                  <span class="onoffswitch-inner"></span>
                  <span class="onoffswitch-switch"></span>
              </label>
            </div>
          </div>
      </div>

      <div class="col-sm-5 no-pad">
        <p>Select percentage of EV in fleet</p>
      </div>
    </div>

      <div class="col-sm-5">
        <h4 class="section-title">Set time range</h4>
        <hr>

        <div class="col-sm-5 no-pad">
          <br>
          <div class="onoffswitch-third">
            <input type="checkbox" name="onoffswitch-third" class="onoffswitch-checkbox-third" id="myonoffswitch-third" checked>
            <label class="onoffswitch-label-third" for="myonoffswitch-third">
                <span class="onoffswitch-inner-third"></span>
                <span class="onoffswitch-switch-third"></span>
            </label>
          </div>
        </div>

        <div class="col-sm-7 no-pad">
          <div class="dropdown">
            <!-- Bootstrap not working -->
            <p>Select  day:</p>
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Dropdown
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <button class="dropdown-item" type="button">Action</button>
              <button class="dropdown-item" type="button">Another action</button>
              <button class="dropdown-item" type="button">Something else here</button>
            </div>
          </div>
        </div>

      </div>
    </div>


    <div class="col-sm-9 no-pad">
      <div class="col-sm-7 no-pad">
        <h4 class="section-title pad-top">Select Vehicle Type</h4>
        <hr>

        <div class="col-sm-7 no-pad">
          <div class="col-sm-6 no-pad">
            <p>Select between EV and IC vehicles.</p>
          </div>

          <div class="col-sm-6 no-pad">
            <div class="onoffswitch-second">
              <input type="checkbox" name="onoffswitch-second" class="onoffswitch-checkbox-second" id="myonoffswitch-second" checked>
              <label class="onoffswitch-label-second" for="myonoffswitch-second">
                  <span class="onoffswitch-inner-second"></span>
                  <span class="onoffswitch-switch-second"></span>
              </label>
            </div>
          </div>
      </div>

      <div class="col-sm-5 no-pad">
        <p>Charge remaining or less</p>
      </div>
    </div>


    </div>

    <div class="col-sm-9">
      {{leaflet-map height='500px' onMapReady=(action 'mapReady')}}
    </div>
</div>
